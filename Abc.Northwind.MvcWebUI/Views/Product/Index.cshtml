@using Abc.Northwind.MvcWebUI.Models
@model ProductListViewModel

@{
    Layout = "/Views/_Layout.cshtml";
}

<div>
    <table class="table table-respons">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId=@product.ProductId>add to cart</a> </td>
                @* asp-route-productId, tıkladığımızda productId değerinin AddToCart action'ına parametre olarak geçmesini sağlıyor*@
            </tr>
        }
    </table>
</div>
<product-list-pager
    current-category="@Model.CurrentCategory" current-page="@Model.CurrentPage"
    page-count="@Model.PageCount" page-size="@Model.PageSize"
></product-list-pager>
